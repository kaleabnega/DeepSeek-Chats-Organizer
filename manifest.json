{
  "manifest_version": 3,
  "name": "DeepSeek Chats Organizer",
  "version": "0.1.0",
  "description": "Group DeepSeek chats into local projects.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://chat.deepseek.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DeepSeek Chats Organizer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
