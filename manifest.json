{
  "manifest_version": 3,
  "name": "DeepSeek Chats Organizer",
  "version": "0.1.0",
  "description": "Group DeepSeek chats into local projects.",
  "permissions": ["storage"],
  "host_permissions": ["https://chat.deepseek.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
